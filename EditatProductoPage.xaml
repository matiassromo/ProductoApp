<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductoAppMovil2.EditatProductoPage"
             Title="EditatProductoPage">
    <VerticalStackLayout BackgroundColor="DarkSlateGray">
        <TableView>
            <TableRoot>
                <TableSection Title="Ingrese nuevo producto">
                    <EntryCell x:Name="Nombre"
                               Placeholder="Nombre"/>
                    <EntryCell x:Name="Cantidad"
                               Placeholder="Cantidad"/>
                    <EntryCell x:Name="Descripcion"
                               Placeholder="Descripcion"/>
                </TableSection>

            </TableRoot>
        </TableView>
        <Button Text="Editar Producto"
                Margin="20"
                BackgroundColor="Aquamarine"
                TextColor="Black"
                FontAttributes="Bold"
                Clicked="OnClickEditatProducto"/>
    </VerticalStackLayout>
</ContentPage>